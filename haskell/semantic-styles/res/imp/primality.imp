int i, m, n, q, r, s, t, x, y, z ;
i = 2 ;  q = n / i ;  t = 1 ;
while (i <= q && 1 <= t) {
  x = i ;
  y = q ;
  z = 0 ;
  while (!(x <= 0)) {
    q = x / 2 ;
    r = q + q + 1 ;
    if (r <= x) { z = z + y ; } else {}
    x = q ;
    y = y + y ;
  }
  if (n <= z) { t = 0 ; } else { i = i + 1 ;  q = n / i ; }
}
